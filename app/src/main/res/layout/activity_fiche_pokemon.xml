<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:orientation="horizontal"
        android:id="@+id/section_InfosPok">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/Linear_types"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/no_nom_pok"/>

        </LinearLayout>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_weight="50"
            android:id="@+id/img_pokemon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/evolution_section">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/title_evolution"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/scrollview_evo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Linear_evo"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/mega_evolution_section">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/title_mega_evolution"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/scrollview_megaEvo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Linear_megaEvo"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/pokedex_entries_section">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/title_pokedex_entries"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="25dp"
            android:id="@+id/scrollview_pokedexEntries">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/Table_pokedex_entries"
                android:orientation="vertical">

            </TableLayout>

        </ScrollView>



    </LinearLayout>

</LinearLayout>